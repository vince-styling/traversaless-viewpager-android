<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="@string/datasetchanged_testcase_desc"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnNothingChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dataset_changed_nothing_change"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btnShuffle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dataset_changed_shuffle"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btnClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dataset_changed_clear"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnDeleteItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dataset_changed_delete_item"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btnAddItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dataset_changed_add_item"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnRenewAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="renew adapter"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btnEmptyAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="empty adapter"
                android:textSize="16sp"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txvFragmentLogs"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="10dp"
        android:textSize="12sp"
        android:background="@drawable/fragment_log_bg"/>

    <LinearLayout
        android:id="@id/mainContent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>